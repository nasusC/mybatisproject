<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ict01.mybatisproject.repository.ArticleRepository">
    <select id="getList" parameterType="com.ict01.mybatisproject.domain.Article" resultType="com.ict01.mybatisproject.domain.Article">
        SELECT
            A.ARTICLE_ID,
            A.TITLE,
            A.CONTENTS,
            A.REG_DATE
        FROM T_ARTICLE A
        ORDER BY A.REG_DATE DESC


    </select>

    <select id="get" parameterType="int"
            resultType="com.ict01.mybatisproject.domain.Article">
        SELECT
            A.ARTICLE_ID,
            A.TITLE,
            A.CONTENTS,
            A.REG_DATE
        FROM T_ARTICLE A
        WHERE A.ARTICLE_ID = #{articleId}

    </select>

    <insert id="save" parameterType="com.ict01.mybatisproject.domain.Article" useGeneratedKeys="true" keyProperty="articleId">
        INSERT INTO T_ARTICLE
            (TITLE, CONTENTS, REG_DATE)
        VALUES
            (
                #{title},
                #{contents},
                NOW()
            )
    </insert>

    <update id="update" parameterType="com.ict01.mybatisproject.domain.Article">
        UPDATE T_ARTICLE
        SET
            TITLE = #{title},
            CONTENTS = #{contents}
        WHERE ARTICLE_ID = #{articleId}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM T_ARTICLE
        WHERE ARTICLE_ID = #{articleId}
    </delete>
</mapper>